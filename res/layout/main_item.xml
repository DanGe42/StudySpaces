<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:background="#EEEEEE">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_building_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="3dip"
            android:textStyle="bold"
            android:textColor="#11CCFF"
            />

        <TextView
            android:id="@+id/item_room_kind"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:ellipsize="end"
            android:gravity="right"
            style="@style/PlainText"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        >

        <TextView
            style="@style/PlainText"
            android:id="@+id/item_num_rooms"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
		<LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        >
	            <ImageView
	                android:id="@+id/item_proj"
	                android:src="@drawable/ic_action_projector"
	                android:contentDescription="@string/title_projector"
	                android:scaleType="fitXY"
	                android:layout_height="16dp"
	                android:layout_width="16dp"
	                android:layout_margin="1dp"
	                />
	
	            <ImageView
	                android:id="@+id/item_comp"
	                android:src="@drawable/ic_action_monitor"
	                android:contentDescription="@string/title_computer"
	                android:scaleType="fitXY"               
	                android:layout_height="16dp"
	                android:layout_width="16dp"
	                android:layout_margin="1dp"
	                />
	
	            <ImageView
	                android:id="@+id/item_board"
	                android:src="@drawable/ic_action_chalkboard"
	                android:contentDescription="@string/title_whiteboard"
	                android:scaleType="fitXY"               
	                android:layout_height="16dp"
	                android:layout_width="16dp"
	                android:layout_margin="1dp"
	                />
	            <ImageView
	                android:id="@+id/item_private"
	                android:src="@drawable/ic_action_eye"
	                android:contentDescription="@string/title_whiteboard"
	                android:scaleType="fitXY"               
	                android:layout_height="16dp"
	                android:layout_width="16dp"
	                android:layout_margin="1dp"
	                />
		</LinearLayout>
        <TextView
            android:id="@+id/item_amenities"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:gravity="right"
            android:visibility="gone"
            android:textColor="#DD1111"
            />

    </LinearLayout>



</LinearLayout>