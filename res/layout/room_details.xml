<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EEEEEE"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#333">

        <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="back"
            />

        <TextView
            style="@style/ColorTitle"
            android:id="@+id/roomTitle"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:text="Room Info"
            />

        <Button
            android:text="Share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="share"
            />

    </LinearLayout>

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:stretchColumns="1"
        >

        <TableRow>
            <TextView
                style="@style/RoomDetailText"                
                android:text="@string/title_building"
                />

            <TextView
                style="@style/RoomDetailValue"                
                android:id="@+id/text_building"
                />
        </TableRow>

        <TableRow>
            <TextView
                style="@style/RoomDetailText"                
                android:text="@string/title_occupancy"
                />

            <TextView
                style="@style/RoomDetailValue"                
                android:id="@+id/text_occupancy"
                />
        </TableRow>

        <TableRow>
            <TextView
                style="@style/RoomDetailText"                
                android:text="@string/title_projector"
                />
            
            <TextView
                style="@style/RoomDetailValue"                
                android:id="@+id/text_projector"
                />
        </TableRow>

        <TableRow>
            <TextView
                style="@style/RoomDetailText"                
                android:text="@string/title_computer"
                />

            <TextView
                style="@style/RoomDetailValue"                
                android:id="@+id/text_computer"
                />
        </TableRow>

        <TableRow>
            <TextView
                style="@style/RoomDetailText"                
                android:text="@string/title_whiteboard"
                />

            <TextView
                style="@style/RoomDetailValue"                
                android:id="@+id/text_whiteboard"
                />
        </TableRow>

        <TableRow>
            <TextView
                style="@style/RoomDetailText"                
                android:text="@string/title_privacy"
                />

            <TextView
                style="@style/RoomDetailValue"                
                android:id="@+id/text_privacy"
                />
        </TableRow>
    </TableLayout>

    <!-- A one-child container for the MapView -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        />

    <Button
        style="@style/PlainText"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_weight="0"
        android:onClick="reserve"
        android:text="@string/text_reserve_button"
        />

</LinearLayout>